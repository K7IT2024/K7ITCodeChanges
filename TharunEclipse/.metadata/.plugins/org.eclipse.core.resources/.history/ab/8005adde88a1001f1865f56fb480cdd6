package ArrayPack1;

public class DigonalsLeftandRight {

	public static void main(String[] args) {

		int a[][] = new int[5][5];

		int k = 10;

		for (int i = 0; i < a.length; i++) {
			for (int j = 0; j < a.length; j++) {
				k = ++k;
				
				if(i==j) {
					System.out.println(a[i][j]=k);
					}else if(i+j==a.length-1) {
						System.out.print(a[i][j]);
					}else {
						System.out.println(" * ");
					}
                 System.out.println();
			}
		}

	}

}
